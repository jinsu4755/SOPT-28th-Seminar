<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/github_repo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="레포지터리 이름"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/github_repo_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="레포지터리 설명"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/github_repo_name"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/github_repo_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="언어"
        app:layout_constraintTop_toBottomOf="@id/github_repo_desc" />


</androidx.constraintlayout.widget.ConstraintLayout>